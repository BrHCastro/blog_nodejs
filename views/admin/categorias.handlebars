<h2>Lista de categorias: </h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova categoria</button></a>

<div class="mt-4 mb-4">
    {{#each categorias}}
    <div class="card mt-1 shadow rounded">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small><br />
            <small>Data da criação: {{date}}</small>
            <a class="float-end" href="/admin/categorias/edit/{{_id}}"><button class="btn btn-warning">Editar</button></a>
            <form class="d-inline" action="/admin/categorias/delete" method="POST">
                <input type="hidden" name="id" value="{{_id}}" />
                <input type="hidden" name="nome" value="{{nome}}">
                <a class="float-end me-2"><button class="btn btn-danger">Excluir</button></a>
            </form>
        </div>
    </div>
    {{else}}
        <h4>Nenhuma categoria registrada!</h4>
    {{/each}}
</div>